{% extends 'base.html.twig' %}

{% block title %}Hello ResponseController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    h1, h3 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        letter-spacing: 5px;
    }
    h1 {
        font-size: 1.8rem;
    }
    .menu li {
        list-style: none;
        display: inline;
    }
    .response {
        margin-top: 50px;
    }
    .response li {
        list-style: none;
        border-bottom: 1px solid #ccc;
    }
    #response {
        margin-top: 30px;
    }
    #response label {
        width: 15%;
    }
    #response input, #response textarea {
        width: 85%;
    }
</style>

<div class="example-wrapper">
    <ul class="menu">
        <li><a href="{{ path('home') }}">Accueil</a></li>
        <li><a href="{{ path('question') }}">Questions</a></li>
    </ul>

    <h1>{{ question }}</h1>

    {{ form(form) }}

    <div class="response">
        {% if responses is empty %}
            <span>Aucune réponse disponible !</span>
        {% else %}
            <h3>Response</h3>
            <ul>
                {% for response in responses %}
                    <li><strong>{{ response.username }}</strong> : {{ response.content }}, publié le <span><i>{{ response.created_at }}</i></span></li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>
{% endblock %}
